<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/one_tablerow"
                android:layout_margin="10dp"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/img_left_width"
                    android:layout_height="@dimen/img_left_height"
                    android:background="@mipmap/sq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="社区"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"

                    android:text="《星际迷航3》送票"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/img_right_width"
                    android:layout_height="@dimen/img_right_height"
                    android:layout_gravity="center"
                    android:background="@mipmap/yjt" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="@dimen/line_marginleft"
                android:background="@color/gray" />

            <TableRow
                android:id="@+id/two_tablerow"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="@dimen/img_left_width"
                    android:layout_height="@dimen/img_left_height"
                    android:background="@mipmap/qflp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="曲风流派"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="音乐图书馆"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/img_right_width"
                    android:layout_height="@dimen/img_right_height"
                    android:layout_gravity="center"
                    android:background="@mipmap/yjt" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="@dimen/line_marginleft"
                android:background="@color/gray" />

            <TableRow
                android:id="@+id/three_tablerow"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="@dimen/img_left_width"
                    android:layout_height="@dimen/img_left_height"
                    android:background="@mipmap/yyr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="音乐人"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="想在音乐节看到谁？"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/img_right_width"
                    android:layout_height="@dimen/img_right_height"
                    android:layout_gravity="center"
                    android:background="@mipmap/yjt" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="@dimen/line_marginleft"
                android:background="@color/gray" />

            <TableRow
                android:id="@+id/four_tablerow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="@dimen/img_left_width"
                    android:layout_height="@dimen/img_left_height"
                    android:background="@mipmap/wdgs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="艺人"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="五月天"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/img_right_width"
                    android:layout_height="@dimen/img_right_height"
                    android:layout_gravity="center"
                    android:background="@mipmap/yjt" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/img_left_width"
                    android:layout_height="@dimen/img_left_height"
                    android:background="@mipmap/cnxh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="猜你喜欢"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="根据你的听歌喜好为你推荐以下内容" />
        </LinearLayout>

        <ListView
            android:id="@+id/find_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/gray"
            android:dividerHeight="5dp" />
    </LinearLayout>
</ScrollView>