<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/aaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="热门歌单"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多 >" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/omnibus1" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/omnibus2"
               />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/omnibus3"
                />
        </TableRow>

        <TableRow android:layout_marginTop="-5dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="2"
                android:ellipsize="end"
                android:text="日常循环 欧美魔性骚曲 Vol.3" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="2"
                android:ellipsize="end"
                android:text="中文说唱（潜力股）" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="2"
                android:ellipsize="end"
                android:text="世界上的那些深情" />
        </TableRow>

        <TableRow android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/omnibus4" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/omnibus5" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@mipmap/omnibus6" />
        </TableRow>

        <TableRow android:layout_marginTop="-5dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:lines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:text="沉醉在这样的夜晚" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="2"
                android:ellipsize="end"
                android:text="世界上的那些深情" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="2"
                android:ellipsize="end"
                android:text="姐心妹情，高唱入雲（女女對唱）" />
        </TableRow>
    </TableLayout>
</LinearLayout>