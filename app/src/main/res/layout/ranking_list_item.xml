<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="3dp">

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="排行榜"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/ranking_title" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ranking_list_alimusic_week_billboard"
            android:layout_below="@+id/ranking_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ranking_img" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ranking_img"
            android:layout_toRightOf="@+id/ranking_img"
            android:layout_toEndOf="@+id/ranking_img">
            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ranking_item1"
                android:text="1.树读 - 王俊凯"/>
            <TextView
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ranking_item2"
                android:text="2.独角戏 - LAY"/>
            <TextView
                android:layout_margin="3dp"
                android:id="@+id/ranking_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.Lotto - EXO"/>
            <TextView
                android:layout_margin="3dp"
                android:id="@+id/ranking_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.顽固 - 五月天"/>
        </LinearLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>