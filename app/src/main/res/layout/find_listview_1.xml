<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/find_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#000"/>
        <LinearLayout
            android:padding="20dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/red"/>
            <TextView
                android:id="@+id/find_play_count"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19万"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:paddingBottom="30dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/find_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            android:gravity="center"
            android:text="【过目难忘欧美男生二】 抒情曲"/>
        <TextView
            android:id="@+id/find_author"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="琳儿 创作的精选集"/>
        <TextView
            android:id="@+id/find_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:lines="2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="不拘风格，抒情为主，有的声音是难以忘怀的，忘不了的还有那动人的旋律，和温暖的aa"/>
    </LinearLayout>
</LinearLayout>